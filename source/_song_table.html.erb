<p class="lead">These are the songs we learn and play together at our meetups.</p>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <p>
      <a href="/pdfs/mss-guitar.pdf" class="btn btn-primary btn-block">
        <i class="fa-solid fa-file-pdf fa-fw"></i> Download Guitar Songbook
      </a>
    </p>
  </div>
  <div class="col-md-4">
    <p>
      <a href="/pdfs/mss-ukulele.pdf" class="btn btn-primary btn-block">
        <i class="fa-solid fa-file-pdf fa-fw"></i> Download Ukulele Songbook
      </a>
    </p>
  </div>
  <div class="col-md-4">
    <p>
      <a href="https://music.apple.com/us/playlist/musicians-singers-songwriters/pl.u-rK7kEtYrPA7" class="btn btn-primary btn-block">
        <i class="fab fa-apple fa-fw"></i> Apple Music Playlist
      </a>
    </p>
  </div>
</div>

<table class="table table-sm">
  <thead>
  <th><a href="/songs/by_title">Title</a></th>
  <th><a href="/songs/by_artist">Artist</a></th>
  <th>
    <a href="/songs/by_year">
      <span class="d-none d-lg-inline">Year</span>
      <i class="d-lg-none fa-solid fa-calendar fa-fw"></i>
    </a>
  </th>
  <th>
    <a href="/songs/by_tempo">
      <span class="d-none d-lg-inline">Tempo</span>
      <i class="d-lg-none fa-solid fa-drum fa-fw"></i>
    </a>
  </th>
  <th>
    <a href="/songs">
      <span class="d-none d-lg-inline">Difficulty</span>
      <i class="d-lg-none fa-solid fa-graduation-cap fa-fw"></i>
    </a>
  </th>
  <th>
    <a href="/songs/by_page">
      <span class="d-none d-lg-inline">Page</span>
      <i class="d-lg-none fa-solid fa-book fa-fw"></i>
    </a>
  </th>
  </thead>
  <tbody>
  <% songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, "/songs/#{song.title.gsub(/[^\w\s]/i, '').parameterize}" %></td>
      <td><%= song.artist %></td>
      <td><%= song.year %></td>
      <td><%= song.tempo %></td>
      <td><%= difficulty_label(song.custom[:difficulty]) %></td>
      <td><%= song.custom[:order].to_i * 2 %></td>
    </tr>
  <% end %>
  </tbody>
</table>
